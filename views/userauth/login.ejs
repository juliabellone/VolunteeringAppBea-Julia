<div class="main main-raised">
    <div class="section section-signup page-header">
        <div class="container">
            <div class="row">
                <div class="col-md-4 ml-auto mr-auto">
                    <div class="card card-sign">
                        <form enctype='multipart/form-data' class="form" action='/opportunities' method='POST' id='form-container'>
                            <div class="card-header card-header-primary text-center">
                                <h4>Log in as Volunteer</h4>
                            </div>
                            <div class="card-body">
                                <span class="bmd-form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="material-icons">face</i>
                                        </span>
                                        <input type="text" class="form-control" placeholder="username">
                                    </div>
                                </span>
                            </div>
                            <div class="card-body">
                                <span class="bmd-form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="material-icons">lock-outline</i>
                                        </span>
                                        <input type='password' class="form-control" name="password">
                                    </div>
                                </span>
                            </div>
                            <div class="card-footer justify-content-center">
                                <button type="submit" class="btn btn-link btn-primary btn-lg">Sign in</button>
                                <!-- <a class="btn btn-link btn-primary btn-lg">Summit</a> -->
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-md-4 ml-auto mr-auto">
                    <div class="card card-sign">
                        <form enctype='multipart/form-data' class="form" action='/ong/profile' method='POST' id='form-container'>
                            <div class="card-header card-header-primary text-center">
                                <h4>Log in as NGO</h4>
                            </div>
                            <div class="card-body">
                                <span class="bmd-form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="material-icons">face</i>
                                        </span>
                                        <input type="text" class="form-control" placeholder="username">
                                    </div>
                                </span>
                            </div>
                            <div class="card-body">
                                <span class="bmd-form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="material-icons">lock-outline</i>
                                        </span>
                                        <input type='password' class="form-control" name="password">
                                    </div>
                                </span>
                            </div>
                            <div class="card-footer justify-content-center">
                                <button type="submit" class="btn btn-link btn-primary btn-lg">Sign in</button>
                                <!-- <a type="submit" class="btn btn-link btn-primary btn-lg">Summit</a> -->
                            </div>
                            <%- include('../partials/notifications') %>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





