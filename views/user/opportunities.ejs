<h1>Find your volunteering opportunity</h1>

<div class="main main-raised">
  <div class="section text-center">
    <div class="row">
      <div class="col-md-8 ml-auto mr-auto">
        <h2 class="title">Let's talk about the product</h2>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 col-ml-6 col-mr-6">
        <h2 class="title">Let's talk about the product</h2>
      </div>
    </div>

  </div>

</div>

<% if (offers.length > 0) { %>
    <% offers.forEach((offer) => { %>
      <div class="offer">
        <div class="photo"><img src="<%=offer.picture.pic_path %>"></div>  
        <div class="offer-data">
            <span class="offer-data-title"><%= offer.title %></span>
            <span class="offer-data-category"><%= offer.category %></span>
            <button class="offer-data-button"><a href="#">Know more</a></button>
        </div>
      </div>
    <%  }) %>
<% } %>
