<% ong._offersPublished.forEach((offer) => { %>
    <div class="col-md-6 ml-auto mr-auto">
        <div class="card" style="width: 50rem;">
            <img class="card-img-top" src="<%= offer.picture.pic_path %>" alt="Card image">
            <div class="card-body">
                <h3 class="title">
                    <%= offer.title %>
                </h3>
                <span class="badge badge-pill badge-primary">
                    <%= offer.category %>
                </span>
                <h4>
                    <%= offer.when %>
                </h4>
                <h5 style="font-weight: bold">
                    <%= offer.where %>
                </h5>
            </div>
        </div>
    </div>
<% }) %>

