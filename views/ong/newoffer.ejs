<form enctype='multipart/form-data' action = '/ong/newoffer' method = 'POST' id = 'form-container'>
  <div class="container">
    <h3 class="title">Create new offer</h3>
    <div class="form-group">
      <input type="text" class="form-control" placeholder="Cause's name" name="title">
    </div>
    <br>
    <label for="picture">Select a picture for your offer</label>
    <input type="file" name="offerpic">
    <br>
    <br>
    <div class="container">
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="where">Where</label>
          <input type='text' class="form-control" placeholder="where" name="where">
        </div>
        <div class="form-group">
            <label class="label-control">Datetime Picker</label>
            <input type="text" id='datetimepicker4' class="datetimepicker"  value="10/05/2016"/>
        </div>
      </div>
    </div>
    <br>
    <label for="category">Cause's category</label>
    <select id="category" class="form-control" name="category" required>
      <option value="">Select one category</option>
      <option value="Rights">Advocacy and Human Rights</option>
      <option value="Animals">Animals</option>
      <option value="Children">Community</option>
      <option value="Community">Arts and Culture</option>
      <option value="Technology">Technology</option>
      <option value="Education">Education</option>
      <option value="Health">Health and Medicine</option>
      <option value="Crisis">Global crisis</option>
      <option value="Environment">Environment</option>
      <option value="Disabilities">People with disabilities</option>
      <option value="Homeless">Homeless and Housing</option>
      <option value="Inmigrants">Inmigrants and Refugees</option>
      <option value="Sports">Sports and Recreation</option>
      <option value="Legal">Justice and Legal</option>
    </select>
    <br>
    <div class="form-group">
      <label for="about">Explain the volunteering offer</label>
      <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="about"></textarea>
    </div>
    <div class="form-group">
      <label for="requirements">Requirements</label>
      <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="requirements"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <%- include('../partials/notifications') %>
  </div>
</form>

<script type="text/javascript">
  $(document).ready(function(){
      $(function() {              
         // Bootstrap DateTimePicker v4
         $('#datetimepicker4').datetimepicker({
               format: 'DD/MM/YYYY'
         });
      }); 

      $('.datetimepicker').datetimepicker({
          icons: {
              time: "fa fa-clock-o",
              date: "fa fa-calendar",
              up: "fa fa-chevron-up",
              down: "fa fa-chevron-down",
              previous: 'fa fa-chevron-left',
              next: 'fa fa-chevron-right',
              today: 'fa fa-screenshot',
              clear: 'fa fa-trash',
              close: 'fa fa-remove'
          }
      });
  });
</script>