<div class="main main-raised signup">
    <div class="container">
       <form enctype='multipart/form-data' action = '/ong/newoffer' method = 'POST' id = 'form-container'>
          <h1>Create new offer</h1>
          <div class="form-group col-md-12">
            <input type="text" class="form-control" placeholder="Cause's name" name="title" required>
          </div>
          <div class="form-group">
              <div class="form-group col-md-12">  
                <select id="category" class="form-control" name="category" placeholder="Select a category" required>
                    <option value="">Select one category</option>
                    <option value="Rights">Advocacy and Human Rights</option>
                    <option value="Animals">Animals</option>
                    <option value="Children">Community</option>
                    <option value="Community">Arts and Culture</option>
                    <option value="Technology">Technology</option>
                    <option value="Education">Education</option>
                    <option value="Health">Health and Medicine</option>
                    <option value="Crisis">Global crisis</option>
                    <option value="Environment">Environment</option>
                    <option value="Disabilities">People with disabilities</option>
                    <option value="Homeless">Homeless and Housing</option>
                    <option value="Inmigrants">Inmigrants and Refugees</option>
                    <option value="Sports">Sports and Recreation</option>
                    <option value="Legal">Justice and Legal</option>
                </select>
              </div>
              <div class="form-group col-md-12">  
              <label class="label-control">When:</label>
              <input type="text" id='datetimepicker4' class="datetimepicker"  value="10/05/2016"/>
              </div>
          </div>
          <br>
          <div class="form-group col-md-12">  
          <label for="picture">Select a picture for your offer</label>
          <div class="input-group">
              <label class="input-group-btn">
              <span class="btn btn-primary">
              Browse <input class="file-input" type="file" name="offerpic" style="display: none;" multiple required>
              </span>
              </label>
              <input type="text" class="form-control" readonly>
          </div>
          </div>
          <div class="form-group col-md-12">  
          <br>
             <div class="form-group">
                   <label for="where">Where</label>
                   <input type='text' class="form-control" name="where">
             </div>
          <br>
          </div>
          <div class="form-group col-md-12">  
          <div class="form-group">
             <label for="about">Explain the volunteering offer</label>
             <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="about"></textarea>
          </div>
          </div>
          <div class="form-group col-md-12">  
          <div class="form-group">
             <label for="requirements">Requirements</label>
             <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="requirements"></textarea>
          </div>
          </div>
          <div class="submit-div">            
              <button type="submit" class="btn btn-primary btn-lg">Sign in</button>
          </div>          
          <%- include('../partials/notifications') %>
       </form>
    </div>
 </div>
<script type="text/javascript">
  $(document).ready(function(){
      $(function() {              
         // Bootstrap DateTimePicker v4
         $('#datetimepicker4').datetimepicker({
               format: 'DD/MM/YYYY'
         });
      }); 

      $('.datetimepicker').datetimepicker({
          icons: {
              time: "fa fa-clock-o",
              date: "fa fa-calendar",
              up: "fa fa-chevron-up",
              down: "fa fa-chevron-down",
              previous: 'fa fa-chevron-left',
              next: 'fa fa-chevron-right',
              today: 'fa fa-screenshot',
              clear: 'fa fa-trash',
              close: 'fa fa-remove'
          }
      });
  });
</script>