<div class=user-profile>
        <h1 class="user-profile"><%=ong.name%></h1>
            <div class="main-info card">
                <img height="400" width="400" src="<%= ong.picture.pic_path %>" alt="ong profile picture" class="img-raised rounded">
                <div class="card-body">
                    <div>
                        <span class="badge badge-pill badge-primary"><%= ong.category %></span>
                    </div>
                    <div>
                        <h5>Contact info:</h5>
                        <p>Telephone: <%=ong.telephone %></p>
                        <p>Email: <%=ong.email %></p>
                    </div>
                    <div>
                        <h5>Address:</h5>
                        <p><%=ong.address.street %></p>
                        <p><%=ong.address.state %></p>
                        <p><%=ong.address.city %> <%=ong.address.zip %></p>
                    </div>	
                </div>
            </div>

        <% if (ong._offersPublished.length > 0) { %>
        <div class="all-opportunities">
            <h2>Offers from <%= ong.name %></h2>
            <% ong._offersPublished.forEach((offer) => { %>
            <div class="card card-opportunity">
                <img class="card-img-top" src="<%=offer.picture.pic_path %>" alt="offer profile picture">
                <div class="card-body">
                    <div class="card-body-info"> 
                    <h3><a href="/offer/<%= offer._id %>"><%= offer.title %></a></h3>
                    <span class="badge badge-pill badge-primary"><%= offer.category %></span>
                    <h4><a href="/ong/<%=offer._ong.id%>"><%= offer._ong.name %></a></h4>
                </div>
                <a href="/offer/<%= offer._id %>" class="btn btn-primary">Manage opportunity</a>
                </div>
            </div>
            <%  }) %>
        </div>
        <% } %>
    </div>
    


<div>
    <div class="page-header header-filter" data-parallax="true" style="background-image: url('<%=ong.picture.pic_path %>');">
        <div class="container">
            <div class="info info-horizontal">
                <div class="brand">
                    <h1 style="font-weight: bold"> 
                        <%= ong.name %>
                    </h1>
                    <span class="badge badge-pill badge-primary">
                        <span>
                            <%= ong.category %>
                        </span>
                    </span>
                    <br>
                    <h3>Contact Data:</h3>
                    <div class="container">
                        <i class="material-icons">email</i>
                        <%= ong.email %>
                    </div>
                    <br>
                    <div class="container">
                        <i class="material-icons">phone</i>
                        <%= ong.telephone %>
                    </div>
                    <br>
                    <h3>Address:</h3>
                    <div class="container">
                        <div clas="alert-icon">
                            <i class="material-icons">location_on</i>
                            We are in <%= ong.address.street %> <%= ong.address.city %> , <%= ong.address.state %> ZIP: <%= ong.address.zip %>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-8 ml-auto mr-auto">
                    <!-- OTHER OPTION FOR TO DISPLAY THE INFO -->
                </div>
            </div>
        </div>
    </div>
</div>

<% ong._offersPublished.forEach((offer) => { %>
    <div class="col-md-6 ml-auto mr-auto">
        <div class="card" style="width: 50rem;">
            <img class="card-img-top" src="<%= offer.picture.pic_path %>" alt="Card image">
            <div class="card-body">
                <h3 class="title">
                    <%= offer.title %>
                </h3>
                <span class="badge badge-pill badge-primary">
                    <%= offer.category %>
                </span>
                <h4>
                    <%= offer.when %>
                </h4>
                <h5 style="font-weight: bold">
                    <%= offer.where %>
                </h5>
            </div>
        </div>
    </div>
<% }) %>

